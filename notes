function reverseString(str) {   //this is to reverse a string
var strArr = str.split(" ");    // this converts a string into an array  (.split changes str into an array)
var reverseStrArray = strArr.reverse(); //this reverses the array to olleh
var reversedString = reverseStrArray.join(" ") //.join makes it into a string again
return reversedString
}
reverseString('hello');
console.log(random.reverse())
var random = ["h", "e", "l"];
 _optional more sleek option_
 function reverseString(str) {
 return str.split(" ").reverse().join(" ");
 _more from scratch option_
 function reverseString(str) {
 var final = " ";
 for (var i=str.length - 1; i >= 0; i--) {
 final += str[i];
 }
