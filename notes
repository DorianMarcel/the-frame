function findLongestWordLength(str) {
var words = str.split(" "); // changes input into an array
var longest = "";           // equals an empty string, this is where we will store the longest string 

for (var word of words) {  
if (word.length > longest.length) longest = word; //this loop starts checking with the, then with quick (which equals 5)
}
console.log(longest.length);
return longest.length;     //changes the longest word into its numerical equivalent
findLongestWord('The quick brown fox jumped over the lazy dog');
}


